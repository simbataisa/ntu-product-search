<?xml version="1.0" encoding="utf-8"?>


<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml" height="80" width="100%" 
	verticalAlign="bottom" verticalGap="2" >
	
	<mx:Style>
	.popUp{
		letter-spacing: 0;
		color: white;
		background-alpha: 0.7;
		background-gradient-alphas: 0.5;
		
		background-color: black;
		theme-color: black;
		border-style:none;
		border-alpha: 0.5;
		
	}
	.menu{
		background-alpha: 0.5;
		color: #FFFFFF;
		letter-spacing: 0;
		fill-colors: #000000, #000000;	
		theme-color: #000000;
		
	}
	.comboBox {
   		cornerRadius: 4;
   		color: #ffffff;
   		fillColors: #999999, #000000,#000000, #CCCCCC;
   		backgroundAlpha: 0.7;
   		useRollOver: true;
   		rollOverColor: #666666;
   		textRollOverColor: #000000;
   		themeColor: #333333;
  	 	letterSpacing: 0;
	}
	
	.myBut{
		color: #ffffff;
		fillColors: #999999, #000000,#000000, #CCCCCC;
		themeColor: #333333;
	}

	</mx:Style>
	<mx:XMLList id="statesXMLList">
        <state abbrev="AL" label="Alabama" />
        <state abbrev="AK" label="Alaska" />
        <state abbrev="AZ" label="Arizona" />
        <state abbrev="AR" label="Arkansas" />
        <state abbrev="CA" label="California" />
        <state abbrev="CO" label="Colorado" />
        <state abbrev="CT" label="Connecticut" />
    </mx:XMLList>
	
	<mx:HBox width="100%" horizontalAlign="left" paddingRight="20" verticalAlign="bottom">
		<mx:Image source="@Embed(source='/images/PSlogo.png')" maintainAspectRatio="true" height="50" x="10"  width="30%"/>
		<mx:HBox width="70%" horizontalAlign="right">
			<mx:Button label="Search" id="searchBut" styleName="myBut" width="10%"/>	
			<mx:TextInput id="query" width="70%" toolTip="Search for"/>
			<mx:ComboBox id="cateSelect"  width="20%" 
				toolTip="Choose your category" styleName="comboBox"  
				labelField="@label" 				
				dropdownStyleName="popUp"/>
		</mx:HBox>
	</mx:HBox>
	
	<mx:MenuBar width="100%" labelField="@label" id="menu"  styleName="menu" menuStyleName="popUp"/>
</mx:VBox>